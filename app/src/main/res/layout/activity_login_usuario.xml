<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.LoginUsuario">

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_marginBottom="76dp"
        android:text="Leia o QR Code localizado em sua mesa"
        android:textSize="18dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/imgBtnCamera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Leia o QR Code localizado em sua mesa" />

    <ImageButton
        android:id="@+id/imgBtnCamera"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_marginBottom="263dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_photo_camera_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLogin" />

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.NomeUsuario">

        <TextView
            android:id="@+id/txtNomeUsu"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_marginEnd="163dp"
            android:layout_marginLeft="163dp"
            android:layout_marginRight="163dp"
            android:layout_marginStart="163dp"
            android:layout_marginTop="48dp"
            android:textSize="17dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lblNomeUsu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtNomeUsu">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/txtCodNomeUsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnConfirmaNomeUsu"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginStart="148dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="148dp"
            android:layout_marginRight="148dp"
            android:background="@drawable/button_background_orange"
            android:onClick="cadastroCliente"
            android:text="@string/confirma"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblNomeUsu" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="198dp"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background_blue"
        android:text="Entrar com o Facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnConfirmaNomeUsu"
        tools:ignore="MissingConstraints" />

    </android.support.constraint.ConstraintLayout>